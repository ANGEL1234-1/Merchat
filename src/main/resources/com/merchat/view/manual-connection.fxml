<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merchat.controller.ManualConnectionController">
    <VBox alignment="CENTER" prefHeight="154.0" prefWidth="250.0" spacing="10.0">
        <padding>
            <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
        </padding>
        <Label fx:id="tvLogIn" text="Enter an IP address" />
        <HBox alignment="CENTER">
            <Label prefWidth="75.0" text="IP Address" textAlignment="CENTER" />
            <TextField fx:id="txtIp" prefWidth="135.0" />
        </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label prefWidth="75.0" text="Port" textAlignment="CENTER" />
            <TextField fx:id="txtPort" prefWidth="135.0" promptText="Defaut: 54321" />
         </children>
      </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="btnBack" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBackButtonClick" prefWidth="45.0" text="Back">
                <HBox.margin>
                    <Insets left="20.0" right="20.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnConnect" alignment="CENTER" contentDisplay="CENTER" onAction="#onConnectButtonClick" prefWidth="65.0" text="Connect" textAlignment="CENTER">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
