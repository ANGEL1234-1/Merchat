<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merchat.controller.ChatController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="550.0" spacing="10.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <Button mnemonicParsing="false" onAction="#onBtnGoBackClicked" text="Go back"/>
        </ToolBar>
        <TextArea fx:id="tvChat" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
        <TextField fx:id="txtChat" onKeyPressed="#onTxtChatKeyPressed" promptText="Type here" VBox.vgrow="ALWAYS" />
    </VBox>
</AnchorPane>
