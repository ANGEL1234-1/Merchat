<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefHeight="154.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merchat.controller.JoinTypeController">
    <VBox alignment="CENTER" prefHeight="154.0" prefWidth="250.0" spacing="15.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="How would you like to join a server?" textAlignment="CENTER" />
      <Label alignment="CENTER" contentDisplay="CENTER" text="You can auto-search servers in your network or manually connect to one" textAlignment="CENTER" wrapText="true" />
        <HBox alignment="CENTER">
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBackButtonClick" prefWidth="45.0" text="Back">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </Button>
         <Button alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" prefWidth="85.0" text="Auto-search">
            <HBox.margin>
               <Insets left="5.0" right="5.0" />
            </HBox.margin>
         </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onManualButtonClick" prefWidth="60.0" text="Manual">
                <HBox.margin>
                    <Insets left="2.0" right="2.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
