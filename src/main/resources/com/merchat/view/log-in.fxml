<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merchat.controller.LogInController">
    <VBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="Welcome to Merchat, pick an username" />
        <HBox alignment="CENTER">
            <Label prefWidth="60.0" text="Username" textAlignment="CENTER" />
            <TextField fx:id="txtUsername" prefWidth="125.0" />
        </HBox>
        <Label fx:id="tvLogIn" text="What would you like to do?" />
        <HBox alignment="CENTER">
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onJoinButtonClick" prefWidth="45.0" text="Join">
                <HBox.margin>
                    <Insets left="20.0" right="20.0" />
                </HBox.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onHostButtonClick" prefWidth="45.0" text="Host">
                <HBox.margin>
                    <Insets left="20.0" right="20.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
